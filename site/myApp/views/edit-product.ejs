<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%- include('./partials/head') %>
    <script src="/javascripts/validar-edit.js"></script>
</head>

<body>

    <%- include('./partials/header') %>


    <main>
        <div class="container container-form">
            <div class="row justify-content-center">
                <div class="col-md-5">
                    <% if (typeof errors != 'undefined') { %>
                    <% for (error of errors) { %>
                    <div class="badgeWar badge-danger"><%= error.msg %></div>
                    <% } %>
                    <% } %>
                    <div class="card p-4">
                        <form action="/products/<%= editProduct.id %>?_method=PUT" method="POST" class="newproduct"
                            id="formulario" novalidate>


                            <label for="name">Nombre del producto</label>
                            <input type="text" name="name" id="name" class="form-control"
                                value="<%= editProduct.name %>" required="required">
                            <p id="error_name" class="error"></p>

                            <label for="category">Categoria</label>
                            <select name="category" id="category" class="form-control">
                                <option value="1" <% if(editProduct.categorias.name == "cat"){ %> selected <% } %>>Gatos
                                </option>
                                <option value="2" <% if(editProduct.categorias.name == "dog"){ %> selected <% } %>>
                                    Perros</option>
                                <option value="3" <% if(editProduct.categorias.name == "bird"){ %> selected <% } %>>Aves
                                </option>
                                <option value="4" <% if(editProduct.categorias.name == "fish"){ %> selected <% } %>>
                                    Peces</option>
                                <option value="5" <% if(editProduct.categorias.name == "rodent"){ %> selected <% } %>>
                                    Roedores</option>
                                <option value="6" <% if(editProduct.categorias.name == "reptile"){ %> selected <% } %>>
                                    Reptiles</option>
                            </select>

                            <label for="stock">Cantidad disponible</label>
                            <input type="number" name="stock" id="stock" class="form-control"
                                value="<%= editProduct.stock %>" required="required">
                            <p id="error_stock" class="error"></p>

                            <label for="price">Precio</label>
                            <input type="number" name="price" id="price" class="form-control"
                                value="<%= editProduct.price %>" required="required">
                            <p id="error_price" class="error"></p>

                            <label for="discount">Oferta</label>
                            <input type="number" name="discount" id="discount" class="form-control"
                                value="<%= editProduct.discount %>" required="required">
                            <p id="error_discount" class="error"></p>

                            <!-- <input type="file" name="img" id="img">
						<label for="img">Selección un archivo</label> -->

                            <label for="description">Descripción</label>
                            <textarea name="description" id="description" cols="30" rows="5" class="form-control"
                                required="required"><%= editProduct.description %></textarea>
                            <p id="error_description" class="error"></p>



                            <div class="text-right mt-3">
                                <button type="submit" class="btn btn-primary">Guardar producto</button>
                            </div>

                        </form>
                    </div>
                </div>

            </div>

    </main>





    <%- include('./partials/footer') %>

    <script src="../../javascripts/cart.js"></script>

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
        integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
        integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
        crossorigin="anonymous"></script>
</body>

</html>