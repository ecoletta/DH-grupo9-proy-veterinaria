<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
	  <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listado de productos</title>

    <%- include('./partials/head') %>
    
  </head>

  <body>

  <%- include('./partials/header') %>

  <main-productos>
    <div class="container-fluid productos-wrapper">
      <div class="row">
        <%for (product of products){ %>
        <div class="col-12 col-sm-6 col-lg-3">
          <section class="card">
            <a href="/products/<%= product.id %>">
              <img src="/img_products/<%= product.image %>" class="card-img-top" alt="...">
            </a>
            <div class="card-body">
              <h5 class="card-title"><%= product.name %></h5>
              <p class="card-text">$ <%= product.price %> </p>
              <div class="btn-group buy-buttons-group" role="group" aria-label="Basic example">
                <button type="button" class="btn btn-secondary">-</button>
                <button type="button" class="btn btn-secondary">Quantity</button>
                <button type="button" class="btn btn-secondary">+</button>
              </div>
            </div>
          </section>
        </div>
        <% } %>
      </div>
    </div>
  </main-productos>

      <%- include('./partials/footer') %>

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>