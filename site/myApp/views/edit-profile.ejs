  <body>

    <%- include('./partials/header') %>

    <div class="edit_profile">
        <form action="/users/profile/edit/?_method=PUT" method="POST" enctype="multipart/form-data">
        <!-- <form action="/users/profile/edit/?_method=PUT" method="POST"> -->
            <div class="form-group">
            <label for="first_name">Nombre</label>
            <input type="text" class="form-control" id="first_name" name="first_name" value="<%= profile.first_name %>">
            </div>
            <div class="form-group">
            <label for="last_name">Nombre</label>
            <input type="text" class="form-control" id="last_name" name="last_name" value="<%= profile.last_name %>">
            </div>
            <div class="form-group">
                <label for="avatar">Seleccione imagen de perfil</label>
                <input type="file" class="form-control-file" id="avatar" name="img">
                <small class="form-text text-muted">Si selecciona una imagen la actual ser√° reemplazada.</small>
            </div>
            <input class="btn btn-primary btn-sm" type="submit" value="Aplicar cambios">
        </form>
    </div>

    <%- include('./partials/footer') %>

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
